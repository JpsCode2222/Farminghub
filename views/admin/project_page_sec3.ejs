<%-include('nav')%>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center text-white"
                style="background-image: linear-gradient(	25deg,rgb(132, 62, 148) 15%,rgb(217, 42, 194) 71%,rgb(11, 87, 239) 71%,rgb(8, 86, 243) 74%,rgb(239, 164, 246) 74%,white 95%);">
                <h3>Section 3</h3>
            </div>
            <hr>
            <% if(list.length <= 4) {%>
                <div class="col-md-12 mt-3 bg-white p-3 shadow">
                    <form action="/admin/save_project_page_sec3" method="post" enctype="multipart/form-data">
                        <div class="row justify-content-center">
                            <div class="col-md-4 mt-2 mb-3">
                                Select Image <span class="text-danger">*</span>
                                <input required class="form-control bg-white" type="file" name="img">
                            </div>
                            <div class="col-md-4 mt-2 mb-3">
                                Enter Count <span class="text-danger">*</span>
                                <input required type="text" class="form-control" name="count" placeholder=" Count">
                            </div>
                            <div class="col-md-4 mt-2 mb-3">
                                Enter Heading <span class="text-danger">*</span>
                                <input required type="text" class="form-control" name="heading" placeholder=" Heading">
                            </div>
                            <div class="col-md-12 text-center">
                                <button class="btn btn-primary mt-4">Save Counter</button>
                            </div>
                        </div>
                    </form>
                </div>
                <%}%>

                    <div class="col-md-12 mt-3 bg-white p-3 shadow">
                        <table class="tbl w-100 tbl-hover table-striped tbl-animated">
                            <tr>
                                <th>Action</th>
                                <th>Sr</th>
                                <th>Image</th>
                                <th>Count</th>
                                <th>Heading</th>
                            </tr>
                            <% for(var i=0; i<list.length; i++){%>
                                <tr>
                                    <td style="white-space: nowrap;">
                                        <a href="/admin/edit_project_sec3/<%=list[i].id%>" class="p-1"><i
                                                class="fa fa-pen-nib text-primary h4"></i></a>
                                        <a href="/admin/delete_project_sec3/<%=list[i].id%>" class="p-1"><i
                                                class="fa fa-trash h4 text-danger"></i></a>
                                    </td>
                                    <td>
                                        <%=i+1%>
                                    </td>
                                    <td>
                                        <img src="/uploads/<%=list[i].svg%>" style="height: 100px;" alt="">
                                    </td>
                                    <td>
                                        <%=list[i].count%>
                                    </td>
                                    <td>
                                        <%=list[i].heading%>
                                    </td>
                                </tr>
                                <%}%>
                        </table>
                    </div>
        </div>
    </div>



    <%-include('footer')%>