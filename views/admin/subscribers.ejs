<%-include('nav')%>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center text-white"
                style="background-image: linear-gradient(	25deg,rgb(132, 62, 148) 15%,rgb(217, 42, 194) 71%,rgb(11, 87, 239) 71%,rgb(8, 86, 243) 74%,rgb(239, 164, 246) 74%,white 95%);">
                <h3>All Subscribers</h3>
            </div>
            <hr>

            <div class="col-md-12 mt-3 bg-white p-3 shadow">
                <table class="tbl w-100 tbl-hover table-striped tbl-animated text-center">
                    <tr>
                        <th>Action</th>
                        <th>Sr</th>
                        <th>
                            Email
                        </th>
                    </tr>
                    <% for(var i=0; i<list.length; i++){%>
                        <tr>
                            <td style="white-space: nowrap;">
                                <a href="/admin/edit_subscriber/<%=list[i].id%>" class="p-1"><i
                                        class="fa fa-pen-nib text-primary h4"></i></a>
                                <a href="/admin/delete_subscriber/<%=list[i].id%>" class="p-1"><i
                                        class="fa fa-trash h4 text-danger"></i></a>
                            </td>
                            <td>
                                <%=i+1%>
                            </td>
                            <td>
                                <%=list[i].email%>
                            </td>
                        </tr>
                        <%}%>
                </table>
            </div>

        </div>
    </div>
    <%-include('footer')%>