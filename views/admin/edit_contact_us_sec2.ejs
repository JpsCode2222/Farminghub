<%-include('nav')%>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center text-white"
                style="background-image: linear-gradient(	25deg,rgb(132, 62, 148) 15%,rgb(217, 42, 194) 71%,rgb(11, 87, 239) 71%,rgb(8, 86, 243) 74%,rgb(239, 164, 246) 74%,white 95%);">
                <h3>Section 2</h3>
            </div>
            <hr>
                <div class="col-md-12 mt-3 bg-white p-3 shadow">
                    <form action="/admin/update_contact_us_sec2" method="post" enctype="multipart/form-data">
                        <div class="row justify-content-center">
                        <div class="col-md-3 mt-2 mb-3">
                                Select Image 
                                <input class="form-control bg-white" type="file" name="img">
                            </div>
                            <div class="col-md-3 mt-2 mb-3">
                            <img src="/uploads/<%=list[0].img%>" style="height:100px" alt="">
                            </div>
                            <div class="col-md-6 mt-2 mb-3">
                                Enter Heading 
                                <input type="text" class="form-control" value="<%=list[0].heading%>" name="heading"
                                    placeholder=" Heading">
                            </div>
                            <div class="col-md-12 mt-2 mb-3">
                                Enter Description 
                                <input type="text" class="form-control" value="<%=list[0].details%>" name="details" placeholder=" Description">
                                <input type="hidden" class="form-control" value="<%=list[0].id%>" name="id">
                            </div>
                            <div class="col-md-12 text-center">
                                <button class="btn btn-primary mt-4">Update Details</button>
                            </div>
                        </div>
                    </form>
                </div>

        </div>
    </div>



    <%-include('footer')%>