<%-include('nav')%>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center text-white" style="background-image: linear-gradient(	25deg,rgb(132, 62, 148) 15%,rgb(217, 42, 194) 71%,rgb(11, 87, 239) 71%,rgb(8, 86, 243) 74%,rgb(239, 164, 246) 74%,white 95%);">
            <h3>Update Navbar Logo</h3>
        </div>
        <hr>
        <div class="col-md-10 mt-3 bg-white p-3 shadow">
           <form action="/admin/save_navbar" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-3">
                    <img src="/uploads/<%=list[0].nav_logo%>" class="img-fluid" width="120px" alt="">
                </div>
                <div class="col-md-5 mt-3">
                    Navbar_Logo
                    <input class="form-control bg-white" type="file" name="nav_logo">
                </div>
                <div class="col-md-4 mt-3">
                    <button class="btn btn-primary mt-4 form-control">Update Logo</button>
                </div>
            </div>
           </form>
        </div>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-md-12 text-center text-white" style="background-image: linear-gradient(	25deg,rgb(132, 62, 148) 15%,rgb(217, 42, 194) 71%,rgb(11, 87, 239) 71%,rgb(8, 86, 243) 74%,rgb(239, 164, 246) 74%,white 95%);">
            <h3>user is contact to you</h3>
        </div>

        <div class="col-12 mt-4 shadow table-responsive">
            <table class="table table-hover">
                <tr>
                    <td>S/N</td>
                    <td>Full_Name</td>
                    <td>Email_Address</td>
                    <td>Phone_Number</td>
                    <td>Your_Message</td>
                </tr>
                <% conatct_user.forEach((val,i)=>{ %>
                <tr>
                    <th><%=i+1%></th>
                    <th><%=val.Full_Name%></th>
                    <th><%=val.Email_Address%></th>
                    <th><%=val.Phone_Number%></th>
                    <th><%=val.Your_Message%></th>
                   
                </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>


<%-include('footer')%>