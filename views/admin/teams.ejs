<%-include('nav.ejs')%>
<div class="container-fluid">
    <div class="col-md-12 mb-4">
        <div class="col-md-12 text-center text-white" style="background-image: linear-gradient(	25deg,rgb(132, 62, 148) 15%,rgb(217, 42, 194) 71%,rgb(11, 87, 239) 71%,rgb(8, 86, 243) 74%,rgb(239, 164, 246) 74%,white 95%);">
            <h3>Teams</h3>
        </div>
    </div>
<form action="/admin/save_team" method="post" enctype="multipart/form-data">
    <div class="row shadow p-3">
        <div class="col-md-4">
            Enter Quotes
            <input type="text" name="quote" class="form-control">
        </div>
        <div class="col-md-4">
            Select Image*
            <input type="file" name="img" class="form-control">
        </div>
        <div class="col-md-4">
            Instagram Link*
            <input type="text" name="insta_link" class="form-control">
        </div>
        <div class="col-md-4">
        Whatsapp Link*
            <input type="text" name="whatsapp_link" class="form-control">
        </div>
        <div class="col-md-4">
            Facebook Link*
            <input type="text" name="facebook_link" class="form-control">
        </div>
        <div class="col-md-4 mt-4">
            <Button class="btn btn-primary">Save</Button>
        </div>
    </div>
</form>
</div>



<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="col-md-12 text-center text-white" style="background-image: linear-gradient(	25deg,rgb(132, 62, 148) 15%,rgb(217, 42, 194) 71%,rgb(11, 87, 239) 71%,rgb(8, 86, 243) 74%,rgb(239, 164, 246) 74%,white 95%);">
                <h3>Manage Teams </h3>
            </div>
        </div>
        <div class="col-md-12">
            <table class="table table-hover text-center fw-normal">
                <tr>
                    <th>Sn</th>
                    <th>img</th>
                    <th>Insta Link</th>
                    <th>Whatsapp Link</th>
                    <th>Facebook Link</th>
                    <th>Action</th>
                </tr>
                <%for(var i=0;i<teams.length;i++){%>
                    <tr>
                        <td><%=i+1%></td>
                        <th>
                            <img src="/uploads/<%=teams[i].img%>" alt="" width="100px">
                        </th>
                        <th><%=teams[i].insta_link%></th>
                        <th><%=teams[i].whatsapp_link%></th>
                        <th><%=teams[i].facebook_link%></th>
                        <th>
                            <a href="/admin/edit_team/<%=teams[i].team_id%>"> <button class="fa fa-pencil btn text-warning"></button></a>
                            <a href="/admin/delete_team/<%=teams[i].team_id%>"><button class="fa fa-trash btn text-danger" onclick="confirm('Are You Sure')"></button></a>
                        </th>
                    </tr>
                <%}%>
            </table>
        </div>
    </div>
</div>
<%-include('footer.ejs')%>
