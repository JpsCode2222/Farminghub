<%-include('nav')%>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center text-white"
                style="background-image: linear-gradient(25deg,rgb(132, 62, 148) 15%,rgb(217, 42, 194) 71%,rgb(11, 87, 239) 71%,rgb(8, 86, 243) 74%,rgb(239, 164, 246) 74%,white 95%);">
                <h3>Vegetables : Section 1</h3>
            </div>
            <hr>
            <div class="col-md-12 mt-3 bg-white p-3 shadow">
                <% if(!list){ %>
                    <form action="/admin/save_vegetable_sec1" method="post" enctype="multipart/form-data">
                        <div class="row justify-content-center">
                            <div class="col-md-6 mt-2 mb-3">
                                Select background Image <span class="text-danger">*</span>
                                <input required class="form-control bg-white" type="file" name="bg_img">
                            </div>
                            <div class="col-md-6 mt-2 mb-3">
                                Enter Title <span class="text-danger">*</span>
                                <input required type="text" class="form-control" name="title" placeholder=" Title">
                            </div>
                            <div class="col-md-6 mt-2 mb-3">
                                Enter Heading <span class="text-danger">*</span>
                                <input required type="text" class="form-control" name="heading" placeholder=" Heading">
                            </div>
                            <div class="col-md-6 mt-2 mb-3">
                                Enter Paragraph <span class="text-danger">*</span>
                                <textarea required class="form-control" name="para" placeholder=" Paragraph"></textarea>
                            </div>
                            <div class="col-md-12 text-center">
                                <button class="btn btn-primary mt-4">Save Details</button>
                            </div>
                        </div>
                    </form>
                    <%}%>
                        <% if(list){ %>
                            <form action="/admin/update_vegetable_sec1" method="post" enctype="multipart/form-data">
                                <div class="row justify-content-center">
                                    <div class="col-md-3 mt-2 mb-3">
                                        Select background Image
                                        <input class="form-control bg-white" type="file" name="bg_img">
                                    </div>
                                    <div class="col-md-3 mt-2 mb-3">
                                        <img src="/uploads/<%=list.bg_img%>" style="height: 100px;" alt="">
                                    </div>
                                    <div class="col-md-6 mt-2 mb-3">
                                        Enter Title
                                        <input type="text" class="form-control" name="title" value="<%=list.title%>"
                                            placeholder=" Title">
                                    </div>
                                    <div class="col-md-6 mt-2 mb-3">
                                        Enter Heading
                                        <input type="text" class="form-control" name="heading" value="<%=list.heading%>"
                                            placeholder=" Heading">
                                        <input type="hidden" class="form-control" name="id" value="<%=list.id%>">
                                    </div>
                                    <div class="col-md-6 mt-2 mb-3">
                                        Enter Paragraph
                                        <textarea class="form-control" name="para"
                                            placeholder=" Paragraph"><%=list.para%></textarea>
                                    </div>
                                    <div class="col-md-12 text-center">
                                        <button class="btn btn-primary mt-4">Update Details</button>
                                    </div>
                                </div>
                            </form>
                            <%}%>
            </div>

        </div>
    </div>
    <%-include('footer')%>