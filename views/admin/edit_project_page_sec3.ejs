<%-include('nav')%>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center text-white"
                style="background-image: linear-gradient(	25deg,rgb(132, 62, 148) 15%,rgb(217, 42, 194) 71%,rgb(11, 87, 239) 71%,rgb(8, 86, 243) 74%,rgb(239, 164, 246) 74%,white 95%);">
                <h3>Section 3</h3>
            </div>
            <hr>
            <div class="col-md-12 mt-3 bg-white p-3 shadow">
                <form action="/admin/update_project_page_sec3" method="post" enctype="multipart/form-data">
                    <div class="row justify-content-center">
                        <div class="col-md-6 mt-2 mb-3">
                            Select Image
                            <input class="form-control bg-white" type="file" name="img">
                        </div>
                        <div class="col-md-6 mt-2 mb-3">
                            <img src="/uploads/<%=data.svg%>" class="h-100 w-100" alt="">
                        </div>
                        <div class="col-md-6 mt-2 mb-3">
                            Enter Count
                            <input value="<%=data.count%>" type="text" class="form-control" name="count"
                                placeholder=" Count">
                            <input value="<%=data.id%>" type="hidden" class="form-control" name="id"
                                placeholder=" Count">
                        </div>
                        <div class="col-md-6 mt-2 mb-3">
                            Enter Heading
                            <input value="<%=data.heading%>" type="text" class="form-control" name="heading"
                                placeholder=" Heading">
                        </div>
                        <div class="col-md-12 text-center">
                            <button class="btn btn-primary mt-4">Update Counter</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <%-include('footer')%>